<div id='<%= plan.id %>-export-dialog' data-container="body" class='modal hide fade'>
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h3>Export <%= plan.project.title %>: <%= plan.version.phase.dmptemplate.title %></h3>
	</div>
	<div class="modal-body">
		<h4>HTML</h4>
		<p><%= link_to "Generate HTML", [:export, plan.project, plan], :target => "_blank" %></p>
		<h4>XML</h4>
		<p><%= link_to "Generate XML", export_project_plan_path(plan.project, plan, :format => "xml"), :target => "_blank" %></p>
		<h4>Plain Text</h4>
		<p><%= link_to "Generate Plain Text", export_project_plan_path(plan.project, plan, :format => "text"), :target => "_blank" %></p>
		<h4>JSON</h4>
		<p><%= link_to "Generate JSON", export_project_plan_path(plan.project, plan, :format => :json), :target => "_blank" %></p>
	</div>
</div>