<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:firstname) %>:</strong></dt>
  <dd><%= @user.firstname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:surname) %>:</strong></dt>
  <dd><%= @user.surname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:password) %>:</strong></dt>
  <dd><%= @user.password %></dd>
  <dt><strong><%= model_class.human_attribute_name(:orcid_id) %>:</strong></dt>
  <dd><%= @user.orcid_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:shibboleth_id) %>:</strong></dt>
  <dd><%= @user.shibboleth_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_type_id) %>:</strong></dt>
  <dd><%= @user.user_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_status_id) %>:</strong></dt>
  <dd><%= @user.user_status_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_login) %>:</strong></dt>
  <dd><%= @user.last_login %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              user_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_path(@user), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_path(@user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
