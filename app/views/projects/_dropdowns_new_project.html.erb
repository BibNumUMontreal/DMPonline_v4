<!-- Create a new project (3 dropdowns = 6 options) -->
<%= semantic_form_for @project do |f| %>
    <%= f.inputs do %>
    <div class="createa-project">
        <h3>
            <%= t('helpers.project.create_page.title')%>
        </h3>
        <div class="info-new-project">
            <p>
                <%= t('helpers.project.create_page.desc')%>
            </p>    
        </div>
        <div class="dropdowns">
            <!-- dropdown 1 = funders -->
            <div class="control-group">
                  <div class="controls">
                     <% org_type_name = Organisation.organisations_of_type(t('helpers.org_type.funders')) %>
                     <%= f.input :organisation_name, :as => :select, :collection => org_type_name, :label => t('helpers.org_type.funders'), :input_html => { :multiple => false } %>
                     <div class="controls">
                         <% org_type_name = Organisation.organisations_of_type(t('helpers.org_type.funders')) %>
                         <%= f.input :organisation_name, :as => :select, :collection => org_type_name, :label => t('helpers.org_type.funders'), :input_html => { :multiple => false } %>
                         
                    </div>
                </div>
            </div> 
            
            <!-- dropdown 2 = institution -->
            <div class="control-group">
                  <div class="controls">
                     <% org_type_name = Organisation.organisations_of_type(t('helpers.org_type.institution')) %>
                     <%= f.input :organisation_name, :as => :select, :collection => org_type_name, :label => t('helpers.org_type.institution'), :input_html => { :multiple => false } %>
                    <div class="controls">
                         <% org_type_name = Organisation.organisations_of_type(t('helpers.org_type.institution')) %>
                         <%= f.input :organisation_name, :as => :select, :collection => org_type_name, :label => t('helpers.org_type.institution'), :input_html => { :multiple => false } %>
                    </div>
                </div>
            </div> 
             
            <!-- dropdown 3 = other guidance -->
            <div class="control-group">
                  <div class="controls">
                     <% org_type_name = Organisation.organisations_of_type(t('helpers.org_type.project')) %>
                     <%= f.input :organisation_name, :as => :select, :collection => org_type_name, :label => t('helpers.org_type.other_guidance'), :input_html => { :multiple => false } %>
                </div>
            </div> 
             
        </div>    
    </div>
    <%= link_to t('.new', :default => t("helpers.project.create")),
            new_project_path,
            :class => 'btn btn-primary' %>
    <% end %>
<% end %>   