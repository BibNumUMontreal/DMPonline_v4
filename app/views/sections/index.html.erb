    <th></th>
  </tr>

<% @sections.each do |section| %>
  <tr>
    <td><%= section.section_title %></td>
    <td><%= section.section_desc %></td>
    <td><%= section.section_order %></td>
    <td><%= section.version_id %></td>
    <td><%= section.select :version_id, Version.all.collect {|v| [ v.title, v.id ] } %></td>
    <td><%= link_to 'Show', section %></td>
    <td><%= link_to 'Edit', edit_section_path(section) %></td>
    <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

