<h1>Listing users</h1>

<table>
  <tr>
    <th>User firstname</th>
    <th>User surname</th>
    <th>User email</th>
    <th>User password</th>
    <th>User orcid</th>
    <th>User shibboleth</th>
    <th>User type</th>
    <th>User status</th>
    <th>User login count</th>
    <th>User last login</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.firstname %></td>
    <td><%= user.surname %></td>
    <td><%= user.email %></td>
    <td><%= user.password %></td>
    <td><%= user.orcid_id %></td>
    <td><%= user.shibboleth_id %></td>
    <td><%= user.user_type_id %></td>
    <td><%= user.user_status_id %></td>
    <td><%= user.login_count %></td>
    <td><%= user.last_login %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

